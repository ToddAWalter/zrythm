using Gtk 4.0;

template $TrackWidget : Widget {
  Box highlight_top_box {
    name: "track-highlight-top-box";
  }

  Box main_box {
    name: "track-main-box";
    Box group_colors_box {}
    $TrackCanvasWidget canvas {
      hexpand: true;
      vexpand: true;
    }

    $MeterWidget meter_l {
      visible: "True";
    }

    $MeterWidget meter_r {
      visible: "True";
    }
  }

  Box highlight_bot_box {
    name: "track-highlight-bot-box";
  }
}
