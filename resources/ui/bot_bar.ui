<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="BotBarWidget" parent="GtkWidget">
    <child>
      <object class="GtkCenterBox" id="center_box">
        <child type="start">
          <object class="GtkLabel" id="engine_status_label">
            <property name="justify">left</property>
            <property name="halign">start</property>
            <property name="margin-start">4</property>
            <property name="margin-end">1</property>
            <property name="margin-top">1</property>
            <property name="margin-bottom">1</property>
            <property name="hexpand">True</property>
          </object>
        </child>
        <child type="center">
          <object class="GtkBox" id="mid_box_parent">
            <property name="hexpand">False</property>
            <property name="hexpand-set">True</property>
            <property name="halign">center</property>
            <child>
              <object class="GtkBox" id="digital_meters"/>
            </child>
            <child>
              <object class="ButtonWithMenuWidget" id="metronome">
                <property name="halign">center</property>
                <property name="receives-default">1</property>
              </object>
            </child>
            <child>
              <object class="TransportControlsWidget" id="transport_controls">
              </object>
            </child>
            <child>
              <object class="GtkBox" id="playhead_box"/>
            </child>
          </object>
        </child>
        <child type="end">
          <object class="GtkBox" id="cpu_box">
            <property name="hexpand">True</property>
            <property name="halign">end</property>
            <child>
              <object class="GtkBox">
                <property name="tooltip_text" translatable="yes">MIDI in activity</property>
                <property name="margin_top">4</property>
                <property name="margin_bottom">4</property>
                <child>
                  <object class="GtkFlipper">
                    <property name="flip-horizontal">1</property>
                    <property name="flip-vertical">1</property>
                    <property name="rotate">1</property>
                    <property name="child">
                      <object class="GtkLabel" id="midi_in_lbl">
                        <style>
                          <class name="small-vertical-lbl"/>
                        </style>
                        <!-- TRANSLATORS: either leave this untranslated or make sure the translated text is max 7 characters -->
                        <property name="label" translatable="no">MIDI in</property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="MidiActivityBarWidget" id="midi_activity">
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="LiveWaveformWidget" id="live_waveform">
                <property name="width-request">48</property>
                <property name="margin_top">4</property>
                <property name="margin_bottom">4</property>
                <property name="margin_start">4</property>
                <property name="margin_end">4</property>
                <property name="tooltip-text" translatable="yes">Live Waveform Indicator</property>
                <style>
                  <class name="signal-preview"/>
                </style>
              </object>
            </child>
            <child>
              <object class="SpectrumAnalyzerWidget" id="spectrum_analyzer">
                <property name="width-request">128</property>
                <property name="margin_top">4</property>
                <property name="margin_bottom">4</property>
                <property name="margin_start">4</property>
                <property name="margin_end">4</property>
                <property name="tooltip-text" translatable="yes">Spectrum Analyzer</property>
                <style>
                  <class name="signal-preview"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="meter_box">
                <property name="margin_top">4</property>
                <property name="margin_bottom">4</property>
                <property name="margin_start">4</property>
                <property name="margin_end">4</property>
                <property name="tooltip-text" translatable="yes">Peak Meter</property>
              </object>
            </child>
            <child>
              <object class="CpuWidget" id="cpu_load">
                <property name="visible">1</property>
                <property name="valign">center</property>
                <property name="margin-start">4</property>
                <property name="margin-end">4</property>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <style>
                  <class name="spacer"/>
                  <class name="thick-separator"/>
                </style>
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="PanelToggleButton" id="bot_dock_switcher">
                <property name="area">bottom</property>
                <property name="tooltip-text" translatable="yes">Toggle Bottom Panel</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
