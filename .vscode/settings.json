{
    "cmake.buildDirectory": "${workspaceFolder}/builddir_cmake",
    "cmake.installPrefix": "${workspaceFolder}/_installed_cmake",
    "cmake.configureArgs": [
        "-DCMAKE_PREFIX_PATH=/home/alex/opt/Qt6.8",
        "-DCMAKE_C_COMPILER=clang",
        "-DCMAKE_CXX_COMPILER=clang++",
        "-DZRYTHM_TESTS=ON",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DZRYTHM_DEBUG_QML=ON",
        "-DZRYTHM_USER_MANUAL=OFF",
        "-DZRYTHM_STRICT=ON",
        "-DZRYTHM_STRICT_SPHINX_OPTS=ON",
        "-DZRYTHM_ENABLE_SANITIZER_ADDRESS=ON",
        "-DZRYTHM_ENABLE_SANITIZER_UNDEFINED_BEHAVIOR=ON",
        "-DZRYTHM_ENABLE_SANITIZER_MEMORY=OFF",
    ],
    "cmake.environment": {
        "VIRTUAL_ENV": "${workspaceFolder}/venv",
        "PATH": "${workspaceFolder}/venv/bin:${env:PATH}"
    },
    "cmake.clearOutputBeforeBuild": false,
    // note: run the following right after configure:
    // compdb -p builddir list > /tmp/compile_commands.json && cp /tmp/compile_commands.json builddir/compile_commands.json
    "mesonbuild.configureOptions": [
        "-Ddebug=true",
        "-Doptimization=0",
        "-Dprefix=${workspaceFolder}/_installed",
        "-Db_lto=false",
        "-Dnative_build=true",
        "-Dstrict_flags=true",
        "-Dcarla=enabled",
        "-Dtests=true",
        "-Dbenchmarks=true",
        "-Dextra_debug_info=true",
        "-Drtaudio=enabled",
        "-Drtmidi=enabled",
        "-Dforce_fallback_for=gtk4,libadwaita,libpanel,yyjson,libcyaml",
        "-Dyaml_project_compatibility=enabled",
        // "-Db_sanitize=address,undefined",
        "-Dbackend_max_links=4" // avoid OOM
    ],
    "mesonbuild.mesonlsp.linting.disableUnusedVariableCheck": true,
    "mesonbuild.mesonlsp.others.ignoreDiagnosticsFromSubprojects": true,
    "mesonbuild.configureEnvironment": {
        "CC": "ccache clang",
        "CXX": "ccache clang++",
    },
    "clang-tidy.buildPath": "builddir_cmake",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/builddir_cmake",
        "--clang-tidy",
        "--enable-config",
        "--header-insertion=never",
        "--query-driver=gcc,g++"
    ],
    "clangd.checkUpdates": true,
    "cody.edit.preInstruction": "Assume C++20 and prefer C++20 features. Prefer concise and readable code with helpful comments. For classes meant to be used by QML, use QML_ELEMENT for automatic registration. For class member names, use a `_` suffix instead of a `m_` prefix. Prefer `auto` and references instead of pointers where possible. Assume we are using version Qt 6.8 with QtQuickControls 2. Prefer the `z_*` logging/debug functions. Prefer SteadyClock instead of g_monotonic. Don't remove comments.",
    "cody.chat.preInstruction": "Assume C++20 and prefer C++20 features. Prefer concise and readable code with helpful comments. For classes meant to be used by QML, use QML_ELEMENT for automatic registration. For class member names, use a `_` suffix instead of a `m_` prefix. Prefer `auto` where possible. Assume we are using Qt version 6.8 with QtQuickControls 2.",
    "cody.codebase": "https://github.com/zrythm/zrythm",
    "C_Cpp.default.compileCommands": "/home/alex/Documents/git/zrythm/builddir/compile_commands.json",
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
}
