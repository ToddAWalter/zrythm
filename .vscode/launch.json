{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (GDB)",
            "type": "gdb",
            "request": "launch",
            "target": "${command:cmake.launchTargetPath}",
            "cwd": "${workspaceFolder}",
            "valuesFormatting": "parseText",
            "env": {
                "GSETTINGS_SCHEMA_DIR": "${config:cmake.installPrefix}/share/glib-2.0/schemas",
                "G_DEBUG": "fatal_criticals",
                "ZRYTHM_BREAK_ON_ERROR": "1",
            },
            "arguments": "--dummy"
        }
    ]
}
